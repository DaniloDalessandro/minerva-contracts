# Django Settings
# SECURITY: Set DEBUG=True only for development. Production must use DEBUG=False
DEBUG=True

# SECURITY: SECRET_KEY is REQUIRED and must be unique for each installation
# Generate a new one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-generate-a-new-one

# ALLOWED_HOSTS: Comma-separated list of allowed hosts
# For local development: localhost,127.0.0.1
# For Docker: localhost,127.0.0.1,backend
# For production: add your domain names
ALLOWED_HOSTS=localhost,127.0.0.1

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# Choose ONE configuration below based on your environment:

# --- OPTION 1: SQLite (Local Development Only - NOT recommended for Docker) ---
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3

# --- OPTION 2: PostgreSQL (Docker or Local PostgreSQL) ---
# IMPORTANT: When using Docker, use these exact values to match docker-compose.yml
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=minerva_db
# DATABASE_USER=minerva_user
# DATABASE_PASSWORD=minerva_password
# DATABASE_HOST=db                    # Use 'db' for Docker, 'localhost' for local PostgreSQL
# DATABASE_PORT=5432

# Note: PostgreSQL + pgvector extension is REQUIRED for:
# - Vector embeddings (RAG/semantic search)
# - Production deployments
# - Docker environments (both dev and production)

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here

